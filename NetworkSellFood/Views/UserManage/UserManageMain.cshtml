@model NetworkSellFood.WebUser

@{
    ViewBag.Title = "修改用户基本信息";
    Layout = "~/Views/Shared/usermanagelayout.cshtml";
    NetworkSellFood.WebUser user=(NetworkSellFood.WebUser) ViewData["SearchUser"];
}
@section umhead{
<link href="/Content/css/chgbaseuser.css" type="text/css" rel="stylesheet" />
<script type="text/javascript" src="/Content/scripts/chgbaseuser.js"></script>
}
<div class="panlarea">
<form method="get">
<div class="input-group">
<input class="form-control searcharea" name="search" placeholder="请输入要更改的用户名" />
<span class="input-group-btn">
<button type="submit" class="btn btn-default">搜索</button>
</span>
</div>
</form>
</div>
<div>
@if(user == null){
<div class="alert alert-danger">没有搜索信息</div>
}else{
<ul class="ullist">
<li class="imgli"><img class="img-circle" alt="@user.NickName 的头像" src="/ava/@user.UID" width="100" height="100" /></li>
<li><label class="labels">用户ID:</label><span>@user.UID</span></li>
<li><label class="labels">用户名:</label><span>@user.UserName</span></li>
<li><label class="labels">用户昵称:</label><span>@user.NickName</span></li>
<li><label class="labels">登录时间:</label><span>@user.LastLogin</span></li>
<li><label class="labels">注册时间:</label><span>@user.RegisterTime</span></li>
<li><label class="labels">目前状态:</label><span>@(user.Status == 1?"正常使用":"已被封禁")</span></li>
<li><label class="labels">用户等级:</label><span>@user.Level</span></li>
</ul>
<div>
<button class="btn btn-danger" id="btnPwdReset" data-uid="@user.UID" type="button">初始化密码</button>
<button class="btn btn-danger" id="btnBaned" data-uid="@user.UID" type="button">封禁/解封该用户</button>
<button class="btn btn-danger" id="btnAvaDel" data-uid="@user.UID" type="button">删除头像</button>
<button class="btn btn-danger" id="btnChgNick" type="button">更改昵称</button>
</div>
}
</div>